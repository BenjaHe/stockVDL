<odoo>

    <!--  *********** MODIFICATION DU SITE WEB : PAGE "MON COMPTE" POUR AFFICHER LE BUDGET  **********   -->

    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Website Portal Sale">
      <xpath expr="." position="inside">
          <link rel='stylesheet' href='/website_portal_sale/static/src/less/website_portal_sale.less'/>
      </xpath>
    </template>

    <template id="account" name="Account" inherit_id="website_portal.account">
        <xpath expr="//div[contains(@class,'o_my_documents')]" position="inside">
            <t t-call="stockVDL.partner" />
        </xpath>
    </template>


    <template id="partner" name="Partner">
        <h3 class="page-header">Informations concernant votre enveloppe Economat</h3>

            <div class="o_form_field o_stat_info">
                  <span class="o_stat_text">Les données exposées le sont pour le service : </span>
                  <strong><span t-esc="user_id.parent_id.name" /> </strong>
            </div>
<hr></hr>

            <div class="o_form_field o_stat_info">
                  <span class="o_stat_text"> - Montant initial de l'enveloppe Economat : </span>
                  <strong><span t-esc="user_id.parent_id.budget_CE" />  <span class="o_stat_text">  € </span> </strong>
            </div>
<hr></hr>
            <div class="o_form_field o_stat_info">
                  <span class="o_stat_text"> - Somme total de vos achats sur l'enveloppe Economat : </span> <br></br>
                  <span class="o_stat_text"> Montant indisponible temporairement. Veuillez vous adresser à l'Economat pour prendre connaissance de votre solde. </span>
            </div>

<hr></hr>
            <div class="o_form_field o_stat_info">
                  <span class="o_stat_text"> - Budget restant sur l'enveloppe Economat : </span> <br></br>
                  <span class="o_stat_text"> Montant indisponible temporairement. Veuillez vous adresser à l'Economat pour prendre connaissance de votre solde. </span>
            </div>



