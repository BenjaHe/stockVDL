<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="purchase_order_form_inherited" model="ir.ui.view">
            <field name="name">purchase.order.form.inherited</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

              <xpath expr="//header/button[@name='action_rfq_send']" position="after" >
                    <button name="action_to_validation_1" string="Envoyer à la direction" type="object" class="oe_highlight"  attrs="{'invisible': [('state','not in', ('draft'))]}"/>
                    <button name="action_po_send" string="Envoyer le bon de commande au fournisseur" type="object" class="oe_highlight" groups="purchase.group_purchase_manager,purchase.group_bdc_directeur" attrs="{'invisible': [('state','not in', ('validation_1'))]}" />
                    <button name="button_cancel" string="Refuser / Annuler" type="object" groups="purchase.group_purchase_manager,purchase.group_bdc_directeur" attrs="{'invisible': [('state','not in', ('validation_1'))]}" />
              </xpath>

              <xpath expr="//header/button[@name='action_rfq_send']" position="attributes">
                <attribute name="invisible">1</attribute>
              </xpath>

              <xpath expr="//header/button[@states='purchase']" position="attributes">  <!--  Deuxième fois la même chose car on a deux fois le même bouton  -->
                <attribute name="invisible">1</attribute>
              </xpath>

              <xpath expr="//header/button[@name='print_quotation']" position="attributes">
                <attribute name="invisible">1</attribute>
              </xpath>

              <xpath expr="//button[@name='button_confirm']" position="attributes">
                <attribute name="invisible">1</attribute>
              </xpath>

             <xpath expr="//button[@name='action_view_invoice']" position="attributes">   <!-- Enlever la vue des factures d'achat  -->
                <attribute name="invisible">1</attribute>
              </xpath>

          <!--   <xpath expr="//sheet/page[@string='Deliveries']" position="attributes">
                <attribute name="invisible">1</attribute>
              </xpath>  -->


             <field name="state" position="replace">
                 <field name="state" widget="statusbar" statusbar_visible="draft,validation_1,purchase,done" readonly="1" />
             </field>

                <field name="partner_id" position="after">
                    <field name="fournisseur_economat" string="Est un fournisseur Economat"/>
                </field>

              <field name="company_id" position="after">
                    <field name="dest_address_id" string="Client interne"/>
                    <field name="directeur_id" string="Directeur responsable"/>
                    <field name="comptable_id" string="Comptable principal"/>
                    <field name="comptable_ids" string="Comptables autorisés" widget="many2many_tags"/>
                    <field name="tel_comptable_id" string="Téléphone du comptable"/>
              </field>

              <field name="partner_ref" position="after">
                  <field name="article_budgetaire" string="Article budgétaire"/>
                  <field name="num_engagement" string="Numéro d'engagement"/>
                  <field name="date_livraison_souhaite" string="Date/remarque pour la livraison"/>
              </field>

            </field>
        </record>

        <record id="purchase_order_tree_inherited" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherited</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">

                <field name="date_order" position="replace">
                    <field name="create_date" string="Date de création"/>
                </field>

        <!--      <xpath expr="//tree/field[@name='product_uom']" position="after">
                    <field name="bom_total_cost" string="Coût total pour l'article"/>
              </xpath>  -->

             </field>
        </record>

